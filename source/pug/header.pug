	.section-header__column.section-header__column_search
		.ui-search-top.section-header__search
			button.ui-search-top__button.button-with-icon
				svg.button-with-icon__svg(width="26" height="26")
					circle(cx="13" cy="13" r="10" fill="none" stroke-width="2")
					line(x1="20" y1="20" x2="26" y2="26" stroke-width="2")
			input.ui-search-top__field(type="search" placeholder="Поиск")
	.section-header__column.section-header__column_lang
		.ui-lang-switcher(:class="{'ui-lang-switcher_open': langSwitcherOpen }" v-cloak)
			.ui-lang-switcher__current(:class="{'ui-lang-switcher__current_open': langSwitcherOpen }" @click="langSwitcherOpen = !langSwitcherOpen")
				| {{ lang.current }}
				button.ui-lang-switcher__corner.button-with-icon()
					svg.button-with-icon__svg(width="13" height="8")
						path(d="M 1 1 7 7 13 1" stroke="" stroke-width="2" fill="none")
			.ui-lang-switcher__list(:class="{'hidden': !langSwitcherOpen }")
				.ui-lang-switcher__item(:class="{'ui-lang-switcher__item_current': lang.current == 'Eng'}" @click="lang.current = 'eng'; langSwitcherOpen = false;") Eng
				.ui-lang-switcher__item(:class="{'ui-lang-switcher__item_current': lang.current == 'Рус'}" @click="lang.current = 'rus'; langSwitcherOpen = false;") Рус
	.section-header__column.section-header__column_menu
		a.section-header__menu.button-with-icon(href="#mobile-menu" data-fancybox)
			svg.menu(width="40" height="40")
				line.menu__bar(x1="3" y1="8" x2="37" y2="8")
