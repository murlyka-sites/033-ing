@import "inc/variables"
@import "inc/mixins"
@import "inc/fonts"
@import "inc/scafolding"
@import "inc/ui"


* {
	box-sizing border-box
}

.hidden {
	display none !important
}

.page {
	padding 0
	margin 0
	font-family Suisse 
}

.section {
	&__container {
		padding 0 10px 
		@media (min-width $md) {
			padding 0 30px 
		}
	}
}

.section-header {
	position absolute
	z-index 10
	top 0
	left 0
	width 100%
	padding 20px 0
	
	&__container {
		display flex
		align-items center
		justify-content flex-start
	}
	
	&__column {
		&_menu {
			margin-right auto 
			stroke white
			
			@media (min-width $md) {
				display none
			}
		}
		
		&_nav {
			display none
			
			@media (min-width $md) {
				display block
				margin-right auto 
			}
		}
		
		&_social {
			display none
			
			@media (min-width $xs) {
				display block
			}
			
			@media (min-width $md) {
				display none
			}
		}
		
		&_search {
			
		}
		
		&_lang {
			display none
			
			@media (min-width $sm) {
				display block
				margin-left 15px
			}
		}
	}
	
	&__search {
		width 50px
		margin-left 10px 
		
		@media (min-width $sm) {
			margin-left 15px
		}
		
		@media (min-width $lg) {
			width 150px
			margin-left 60px 
			flex auto
		}
		
		@media (min-width $xlg) {
			width 350px
		}
	}
}

.section-main {
	display flex
	flex-direction column
	padding 150px 0 55px
	background url(../images/bg-main.jpg) center center / cover
	color white
	text-align center
	
	@media (min-width $sm) {
		min-height 100vh 
		padding 100px 0 55px
		text-align left
	}
	
	@media (min-width $xlg) {
		padding 150px 0 55px
	}
	
	&__container {		
		@media (min-width $sm) {
			flex auto
			display flex
			flex-direction column
			justify-content space-between
			height 100%
		}
	}
	
	&__title {
		margin-bottom 25px
		font-weight normal 
		
		@media (min-width $md) {
			margin-bottom 45px
		}
	}
	
	&__slogan {
		margin-bottom 50px
		
		@media (min-width $md) {
			margin-bottom 125px
		}
	}
	
	&__foo {
		@media (min-width $md) {
			display flex
		}
	}
	
	&__buttons {
		margin-bottom 15px 
	}
	
	&__button {
		margin-bottom 5px 
		margin-right 15px 
	}
	
	&__social {
		display none
		
		
		@media (min-width $md) {
			display block
			margin-left auto
		}
	}
}

.section-news {
	padding 40px 0 0
	background #edecea
	
	&__container {
		display flex
	}
	
	&__column {
		width 50%
		margin-right 20px  
		
		&:last-child  {
			margin-right 0
		}
	}
	
	&__card {
		margin-bottom 40px 
	}
	
	&__button {
		margin-bottom 45px 
	}
}

.section-invest-map {
	padding 60px 0 25px
	background #929292 url(../images/bg-invest-map.jpg) center  center / cover
	color white
	
	&__container {
		display flex
		
	}
	
	&__column {
		
	}
	
	&__title {
		margin-bottom 90px 
	}
	
	&__desc {
		font-size 22px
	}
	
	&__column {
		&_desc {
			width 475px 
		}
	}
	
	&__tabs {
		margin-left 20px
		margin-bottom 10px 
	}
}

.nav-top {
	
	@media (min-width $md) {
		font-family Suisse
		font-size 18px
	}
	
	@media (min-width $mlg) {
		font-size 20px
	}
	
	@media (min-width $xlg) {
		font-size 25px
	}
	
	&__list {
		display flex
		padding 0
		margin 0
		list-style-type none 
	}
	
	&__item { 
		margin-right 12px 
	
		@media (min-width $lg) {
			margin-right 15px 
		}
		
		@media (min-width $xlg) {
			margin-right 20px 
		}
	}
	
	&__link {
		color white
		text-decoration none		
		
		&:hover {
			text-decoration underline
		}
	}
}

.list-line {
	list-style-type none
	padding 0
	margin 0
	
	&__item {
		padding 15px 0
		border-top 2px solid white
		
		&:last-child {
			border-bottom 2px solid white 
		}
	}
}

.nav-social {
	&__list {
		display flex
		list-style-type none
		padding 0
		margin 0
	}
	
	&__item {
		margin-right 10px 
		
		@media (min-width $sm) {
			margin-right 15px 
		}
		
		&:last-child {
			margin-right 0 
		}
	}
	
	&__link {
		display block
	}
	
	&__icon {
		width 49px 
		height auto
	}
}

.card-news {
	display flex
	min-height 165px
	
	&__column {
		&_pr {
			margin-right 30px
		}
		
		&_desc {
			padding-top 5px 
		}
	}
	
	&__pr {
		display block
	}
	
	&__date {
		display block
		margin-bottom 20px
		font-family Suisse 
		font-size 10px 
		color $color-dark
	}
	
	&__title {
		font-size 25px 
		text-decoration none
		color $color-dark
		
		&:hover {
			text-decoration underline
		}
	}
}