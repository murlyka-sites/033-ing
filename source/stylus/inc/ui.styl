.button {
	display inline-block
	font-family Suisse 
	border none
	text-decoration none
	user-select none

	&_size {
		&_sm {
			padding 15px 20px 13px
			font-size 20px 
			line-height 1.2 
			border-radius 30px
		}
	}
	
	&_outline {
		border 2px solid
	}
	
	&_theme {
		&_outline {
			&-white {
				color white
				border-color white
				
				&:hover {
					background white
					color $color-dark
				}
			}
			
			&-dark {
				color $color-dark
				border-color $color-dark
				
				&:hover {
					color white
					background $color-dark 
				}
			}
		}
	}
}

.button-with-icon {
	padding 0
	background transparent 
	border none
		
	&__svg {
		stroke currentColor
	}
}

.ui-search-top {
	position relative
	color white
	border-radius 25px
	border 2px solid white
	
	&__field {
		visible hidden
		width 100%
		height 45px
		padding 0 25px 
		border none
		background transparent 
		text-align right
		color white
		font-family Suisse
		font-size 15px		
		placeholder white
		
	}
	
	&__button {
		position absolute
		top 50%
		transform translate(0,-50%)
		left 10px
		width 26px
		height 26px
		color white
		
		&:hover {
			color darken(white, 20%)
		}
	}
}

.ui-lang-switcher {
	position relative
	border 2px solid white
	color white
	font-family Suisse
	border-radius 25px
	display flex
	flex-direction column
	align-items center
	
	&_open {
	}
	
	&__current {
		display flex
		align-items center
		height 45px
		padding 0 25px
	}
	
	&__corner {
		margin-left 10px
	}
	
	&__list {
		padding-top 45px 
		top -2px
		left -2px
		right -2px
		border-radius 25px
		border 2px solid
		position absolute
		overflow hidden
		z-index -1  
	}
	
	&__item {
		display flex
		align-items center
		height 45px
		padding 0 25px
		border-radius 25px
		
		&:hover {
			background white
			color black 
		}
		
		&_current {
			display none
		}
	}
}

.nav-tabs {
	&__list {
		list-style-type none
		display inline-flex
		padding 0
		margin 0
		border 2px solid white
		border-radius 30px
		overflow hidden
	}
	
	&__item {
		padding 10px 
		border-right 2px solid white
		
		&_active,
		&:hover {
			background #fff8
		}
		
		&:first-child {
			padding-left 20px 
		}
		
		&:last-child {
			border-right none
			padding-right 20px 
		}
	}
	
	&__link {
		color inherit
		text-decoration none
	}
}

.menu {	
	display block
	
	&__bar {
		stroke white
		stroke-width 5
		stroke-linecap round
		transform-origin center
		transition 0.3s transform, opacity
		fill white
	}
	
	&_cross {
		.menu__bar {
			opacity 0
		}
		
		.menu__bar_cross {
			opacity 1
			
			&:nth-of-type(3) {
				transform rotate(-45deg)
			}
			
			&:nth-of-type(2) {
				transform rotate(45deg)
			}
		}
	}
}