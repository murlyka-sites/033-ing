.button {
	display inline-block
	font-family Suisse 
	border none
	text-decoration none
	user-select none
	max-width 100%

	&_size {
		&_xs {
			padding 15px 15px 13px
			font-size 16px 
			line-height 1.2 
			border-radius 30px
			
			@media (min-width $sm) {
				font-size 18px 
			}
			
			@media(min-width $xlg) {
				padding 20px  30px 18px
				border-radius 45px
				font-size 20px
			}
		}
		
		&_sm {
			padding 15px 20px 13px
			font-size 16px 
			line-height 1.2 
			border-radius 30px
			
			@media (min-width $sm) {
				font-size 20px 
			}
			
			@media(min-width $xlg) {
				padding 20px  30px 18px
				border-radius 45px
				font-size 25px
			}
		}
	}
	
	&_outline {
		background transparent
		border 1px solid
	}
	
	&_theme {
		&_white {
			background white 
			color $color-dark
			
			&:hover {
				background $color-dark
				color white 
			}
		}
		
		&_outline {
			&-white {
				color white
				border-color white
				
				&:hover {
					background white
					color $color-dark
				}
				
				&-dark {
					color $color-graphite
					border-color $color-dark
				
					&:hover {
						color $color-graphite
						background $color-dark 
					}
				}
			}
			
			&-dark {
				color $color-dark
				border-color $color-dark
				
				&:hover {
					color white
					background $color-dark 
				}
			}
		}
	}
}

.ui-dropdown {
	display none
	position absolute	
	z-index 10
	padding 0
	width 175px
	border-radius 6px
	overflow hidden
	list-style-type none
	background $color-granite
	color white
	
	&_open {
		display block
	}
	
	&_top {
		top 100%
		left 0
		transform translate(-15px, 0)
	}
	
	&__item {
		// padding 15px
	}
	
	&__link {
		display block
		padding 10px 15px
		color inherit
		text-decoration none
		font-size 14px
		
		&:hover {
			background $color-shale
		}
	}
}

.button-with-icon {
	padding 0
	background transparent 
	border none
		
	&__svg {
		stroke currentColor
	}
}

.ui-search-top {
	position relative
	background #404759
	color white
	border-radius 25px
	height 45px
	
	&__field {
		display none
		width 100%
		height 45px
		padding 0 40px 0 25px
		border none
		background transparent 
		text-align left
		color white
		font-family Suisse
		font-size 15px		
		placeholder white
		

		@media (min-width 1200px) {
			display block
			padding 0 40px 0 25px
		}
	}
	
	&__button {
		position absolute
		top 50%
		transform translate(0,-55%)
		right 10px
		width 26px
		height 26px
		color white
		
		&:hover {
			color darken(white, 20%)
		}
	}
}

.ui-lang-switcher {
	position relative
	background #404759
	color white
	font-family Suisse
	border-radius 25px
	display flex
	flex-direction column
	align-items center
	
	&_open {
	}
	
	&__svg {
		
		stroke currentColor
	}
	
	&__current {
		display flex
		align-items center
		height 45px
		padding 0 25px
		cursor pointer
		border-radius 25px
		
		&_open {
			background white
			color #404759
			stroke #404759
		}
	}
	
	&__corner {
		margin-left 10px
		color inherit
	}
	
	&__list {
		padding-top 50px 
		top 0px
		left 0px
		right 0px
		border-radius 25px
		background #404759
		position absolute
		overflow hidden
		z-index -1  
	}
	
	&__item {
		display flex
		align-items center
		height 45px
		padding 0 25px
		// border-radius 25px
		cursor pointer
		
		color white
		
		&:hover {
			background white
			color #404759
		}
		
		&_current {
			display none
		}
	}
}

.nav-tabs {
	&__list {
		list-style-type none
		display inline-flex
		padding 0
		margin 0
		border 2px solid white
		border-radius 30px
		overflow hidden
		
		@media (min-width $xlg) {
			border-radius 50px
		}
	}
	
	&__item {
		padding 10px 
		border-right 2px solid white
		cursor pointer
		
		@media (min-width $xlg) {
			padding 25px 
		}
		
		&_active,
		&:hover {
			background #fff8
		}
		
		&:first-child {
			padding-left 20px 
			
			@media (min-width $xlg) {
				padding-left 40px
			}
		}
		
		&:last-child {
			border-right none
			padding-right 20px 
			
			@media (min-width $xlg) {
				padding-right 40px
			}
		}
	}
	
	&__link {
		color inherit
		text-decoration none
	}
}

.menu {	
	display block
	
	&__bar {
		stroke white
		stroke-width 5
		stroke-linecap round
		transform-origin center
		transition 0.3s transform, opacity
		fill white
	}
	
	&_cross {
		.menu__bar {
			opacity 0
		}
		
		.menu__bar_cross {
			opacity 1
			
			&:nth-of-type(3) {
				transform rotate(-45deg)
			}
			
			&:nth-of-type(2) {
				transform rotate(45deg)
			}
		}
	}
}
.swiper-container {
	.swiper-pagination-bullets {
		text-align left
		padding 0 30px 
	}
	
	.swiper-pagination-bullet {
		background #9A8D8D
		width 46px
		height 46px
		margin 0 8px 
		text-align left
		opacity 0.5
		
		&-active,
		&:hover  {
			background #9A8D8D 
			opacity 1
		}
	
	}
}

.ui-form-row {
	display block
	margin-bottom 25px
	
	&__label {
		display block
		font-family Roboto, sans-serif
		margin-bottom 10px
		font-size 18px
	}
	
	&__field {}
}

.ui-row-checkbox {
	display flex
	align-items center
	margin-bottom 25px
	
	&__box {
		margin-right 10px
	}
	
	&__label {}
}


.ui-field {
	height 50px
	padding 0 15px
	border-radius 25px
	border 1px solid #b6b6b6
	background transparent
	color white
}

.ui-textarea {
	height 50px
	padding 10px 15px
	border-radius 25px
	border 1px solid #b6b6b6
	background transparent
	color white
	resize none
}

.--h-90 {
	height 90px
}

.--h-175 {
	height 175px
}

.--w-340 {
	width 340px
}

.available {
	display block
	width 100%
}