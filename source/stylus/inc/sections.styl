.article-success {
	color white
	background-size cover
	background-position right center
	
	@media (min-width 768px) {
		min-height 340px 
	}
	
	&__content {
		padding 20px 
		
		@media (min-width $sm) {
			padding 90px 60px 40px
			max-width 75%
		}
	}
	 
	
	&__title {
		margin-bottom 25px
		font-size 20px
		
		@media (min-width $sm) {
			margin-bottom 55px 
			font-size 30px 
		}
	}
	
