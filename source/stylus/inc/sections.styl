	flex-direction column
	align-items stretch
	
	@media (min-width $lg) {
		flex-direction row
	}
	
	&__content {
		padding 20px 5px
		background $color-granite
		color white
		
		@media (min-width 480px) {
			padding 20px
		}
		
		@media (min-width 600px) {
			padding 50px
		}
		
		@media (min-width $lg) {
			min-height 540px
			width 50%
		}
	}
	
	&__bg {
		display none
		
		@media (min-width $lg) {
			display block
			flex auto
			background-size cover
		}
	}
	
	&__header {
		text-align center
		margin-bottom 30px 
		
		@media (min-width 480px) {
			display flex
			align-items center
			text-align left
		}
	}
	
	&__pr {
		height auto
		
		width 100px
		
		@media (min-width 480px) {
			margin-right 20px
		}
		
		@media (min-width 1360px) {
			width 180px			
		}
	}
	
	
	&__title {
		font-family Roboto,  sans-serif 
		font-size 30px 
		margin-bottom 10px
	}
	
	&__subtitle {
		font-family William 
		font-size 18px 
	}
	
	&__text {
		margin-bottom 35px 
		font-size 18px
		line-height 30px 
	}
}

.download {
	&__title {}
	
	&__grid {
		font-size 0
		
		@supports( flex-wrap wrap) {
			display flex
			flex-wrap wrap
		}
	}
	
	&__card {
		display inline-block
		width 100%
		padding-right 25px 
		margin-bottom 25px 
		
		@media (min-width $sm) {
			width 50%
			padding-right 50px 
			margin-bottom 50px 
		}
	}
}

.card-download {
	display flex
	align-items center
	text-decoration none
	
	&:hover &__title {
		text-decoration underline
	}
	
	&__icon {
		flex none
		margin-right 15px 
	}
	
	&__desc {
		min-width 0
	}
	
	&__title {
		margin-bottom 5px
		font-family William 
		font-size 16px 
		color $color-pearly-beige
		
		@media (min-width 480px) {
			font-size 18px 
		}
		
		@media (min-width $sm) {
			font-size 22px 
		}
	}
	
	&__size {
		padding-left 12px
		font-family Roboto, sans-serif 
		font-size 12px 
		color $color-dark
		
		@media (min-width $sm) {
			font-size 16px 
		}
	}
}

.inner-article {
	max-width 100%
	
	@media (min-width $md) {
		display -ms-grid
		display grid
		width 100%
		min-width 0
		-ms-grid-columns 300px 1fr
		grid-template-columns 300px 1fr
		
	}
	
	&__column {
		// transform: translate3d(0px, 0px, 0px);
		min-width 0
		max-width 100%
		
		
		&_right {
			// flex auto
			-ms-grid-column 2
		}
		
		&_left {
			@media (min-width $md) {
				width 300px
				flex none
				-ms-grid-column 1
			}
		}
	}
	
}

.article-slider {
	position relative
	padding-top 40px 
	
	&__desc {
		padding 15px
		
		@media (min-width 600px) {
			padding 30px 135px 30px 35px
		}
	}
	
	&__title {
		margin-bottom 15px
		font-size 22px
		color $color-granite
	}
	
	&__date {
		display block
		color $color-pearly-beige
	}
	
	&__nav {
		position absolute
		top 10px
		right 0
		z-index 10 
		display flex
		align-items center
		justify-content center
		color $color-pearly-beige
		font-size 14px
		
		@media (min-width 600px) {
			top auto
			bottom 0
			width 135px
			height 135px
		}
	}
	
	&__pagination {
		margin-right 14px
		width auto !important
	}
	
	&__prev,
	&__next {
		background none
		border none
		color $color-pearly-beige
		
		&:hover {
			color $color-granite
		}
		
		&.swiper-button-disabled {
			opacity 0.5
			
			&:hover {
				color $color-pearly-beige
			}
		}
	}
	
	&__icon {
		display block
		stroke currentColor
		cursor pointer
	}
}

